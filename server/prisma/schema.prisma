datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime   @default(now())
  firstName String?
  gitSpace  GitSpace[]
  id        String     @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime   @updatedAt
  username  String     @unique
}

model GitSpace {
  createdAt          DateTime               @default(now())
  gitProviderSetting GitProviderSetting?
  id                 String                 @id @default(cuid())
  name               String?
  provider           EnumGitSpaceProvider?
  spaceType          EnumGitSpaceSpaceType?
  updatedAt          DateTime               @updatedAt
  user               User?                  @relation(fields: [userId], references: [id])
  userId             String?
}

model GitProviderSetting {
  accessToken    String?
  accountId      String?
  copes          String?
  createdAt      DateTime                       @default(now())
  gitSpaces      GitSpace?                      @relation(fields: [gitSpacesId], references: [id])
  gitSpacesId    String?                        @unique
  id             String                         @id @default(cuid())
  installationId String?
  name           String
  provider       EnumGitProviderSettingProvider
  refreshToken   String?
  tokenType      String?
  updatedAt      DateTime                       @updatedAt
  uuid           String?
}

enum EnumGitSpaceProvider {
  GitHub
  GitLab
  Bitbucket
}

enum EnumGitSpaceSpaceType {
  Organization
  User
}

enum EnumGitProviderSettingProvider {
  GitHub
  GiLab
  Bitbucket
}
